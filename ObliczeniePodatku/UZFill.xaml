        <RadioButton x:Name="ZusUInnegoPracodawcy" Content="Zus u innego pracodawcy" Margin="0,189,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Content="Oblicz" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Width="113" Height="27" Click="Button_Click"/>
        <Button x:Name="GoBack" Content="&lt; - Back" VerticalAlignment="Top" Foreground="Gray" Margin="643,22,643,0" Background="Transparent" BorderThickness="0" FontSize="14" Click="GoBack_Click"/>
        <Label x:Name="KwotaNetto" Content="" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,279,0,0" Foreground="DarkGreen" VerticalAlignment="Top" Width="510" Height="64" FontSize="20"/>


    </Grid>
